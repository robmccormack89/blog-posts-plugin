{% if latest_posts is not empty %}
	<section class="blog-posts-section">
		<div uk-grid>

			{% for post in latest_posts %}
				<article class="post {{ post.class|e('esc_html') }}">

					{% if post.thumbnail %}
						<img src="{{ post.thumbnail.src|resize(800, 450)|e('esc_url') }}" alt="{{ post.thumbnail.alt|e('esc_html') }}" width="800" height="450">
					{% endif %}

					<h3>
						<a class="uk-link-heading" href="{{ post.link|e('esc_url') }}">{{ post.title|e('esc_html') }}</a>
					</h3>

					{% if post.preview is not empty %}
						<p>{{ post.preview.length(22).force.read_more('')|e('esc_html') }}</p>
					{% endif %}

					<a class="uk-button uk-button-text" href="{{ post.link|e('esc_url') }}">
						{{ _x('Read more', 'Read more button - text', 'blog-posts-section')|e('esc_html') }}
					</a>

				</article>
			{% endfor %}

		</div>
	</section>
{% endif %}
